[colors]
background = #6a2162
background-alt = #9a3b91
foreground = #ccc
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/bar1]
width = 100%
height = 35
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

; Underlines
line-size = 4
line-color = #f00

border-size = 8
border-color = #00000000

; start and end of the bar
padding-left = 0
padding-right = 3

; between modules
module-margin-left = 1
module-margin-right = 1

;font-0 = fixed:pixelsize=10;1
;font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
;font-2 = siji:pixelsize=10;1

;font-0 = roboto:pixelsize=13
font-0 = "Ubuntu Mono Regular:pixelsize=14"
font-1 = dejavusans:pixelsize=13
font-2 = fontawesome:pixelsize=13
font-3 = unifont:pixelsize=13

modules-left = i3
modules-center = xwindow
; modules-right = filesystem xbacklight pulseaudio xkeyboard wlan memory cpu battery date
modules-right = filesystem pulseaudio xkeyboard network wlan memory cpu date

tray-position = right
tray-padding = 2
;tray-transparent = true

;wm-restack = i3

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

